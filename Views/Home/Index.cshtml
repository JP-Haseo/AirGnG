@model IEnumerable<AirGnG.Models.MenuItem>
@{
    ViewData["Title"] = "Menu";
}

<div class="text-center">
    <h1 class="display-4">☕ Cafe Menu</h1>
</div>

<form asp-action="AddToCart" method="post">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4" style="opacity:90%">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text text-muted flex-grow-1">@item.Description</p>
                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <span class="badge bg-primary fs-5">$@item.Price.ToString("F2")</span>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="selectedItemIds" value="@item.Id" id="item_@item.Id">
                                <label class="form-check-label" for="item_@item.Id">
                                    Select
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4 p-3 bg-light border-top fixed-bottom-container"
         style="background-image: url(images/NavBarBackground.png); background-size: cover;
                background-position: center center; background-repeat: no-repeat; background-attachment: fixed;">
        <button type="submit" class="btn btn-success btn-lg">
            🛒 Proceed to Shopping Cart
        </button>
    </div>
</form>

<style>
    /* Add a small offset so the fixed button doesn't cover content */
    body {
        padding-bottom: 80px;
    }
    .fixed-bottom-container {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        z-index: 1030; /* Above typical content */
    }
</style>